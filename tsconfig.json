{
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
        "outDir": "dist",
        "moduleResolution": "node",
        "baseUrl": "./",
        "lib": [
          "es2017", "dom"  
        ],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "noEmit": false, // important for aot angulat 5
        "inlineSources": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "test.ts",
        "**/*.spec.ts"
    ]
}